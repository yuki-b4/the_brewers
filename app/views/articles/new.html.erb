<%= form_with model: @article, local: true do |f|%>

   <div class="field">
    <%= f.label :title, "レシピのタイトル" %><br />
    <%= f.text_area :title%>
   </div>

   <div class="field">
    <%= f.label :detail, "コーヒーの詳細" %><br />
    <%= f.text_area :detail%>
   </div>

   <div class="field">
    <%= f.label :how_brew, "淹れ方について教えてください" %><br />
    <%= f.text_area :how_brew%>
   </div>

   <div class="field">
    <%= f.label :why_brew, "どうしてそう淹れようと思いましたか？（参考にした記事などあれば教えてください！）" %><br />
    <%= f.text_area :why_brew%>
   </div>

   <div class="field">
    <%= f.label :commit, "こだわりポイント" %><br />
    <%= f.text_area :commit%>
   </div>

   <div class="field">
    <%= f.label :taste, "お味はいかがでしたか？" %><br />
    <%= f.text_area :taste%>
   </div>

   <div class="action">
    <%= f.submit "投稿する", class: :form__btn %>
   </div>

<% end %>