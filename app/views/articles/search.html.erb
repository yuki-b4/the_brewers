  <%= render "devise/shared/global_header"%>
  <%= render "devise/shared/second_header"%>
  <%= render "devise/shared/done_flash_message"%>
  <% if @results.blank? %>
    <p>Sorry...<br />検索結果に当てはまる記事は見つかりませんでした</p>
  <% end %>
  <div class="card__wrapper">
    <% @results.each do |article|%>
      <div class="card">
        <%# 必ずしも、記事投稿の際に画像を添付する必要はないので... %>
          <% if article.image.attached? %>   
            <%= link_to image_tag(article.image, class: :card__img ), article_path(article), method: :get %>   <%# 投稿詳細ページに %>
          <% end %>
          <div class="card__body">
            <%= link_to article.title, article_path(article), class: :card__title%>         <%# 投稿詳細ページに %>
            <% article.tags.each do |tag|%>
              <p class="card__summary">
                <%= tag.name %>
              </p>
            <% end %>
            <%= link_to "by #{article.user.nickname}", "#", class: :card__user %>    <%# ユーザー詳細ページに %>
          </div>
      </div>
    <% end %>
  </div>