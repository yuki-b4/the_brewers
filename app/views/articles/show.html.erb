<%= render "devise/shared/global_header"%>
<%# <%= render "devise/shared/second_header"%> 
<header class="second_header">
  <div class="nav">
    <div class="nav_left">
      <%= link_to "The Brewers", root_path, class: :nav_logo %>
    </div>
    <div class="nav_center">
    </div>
    <div class="nav_right"> 
      <%= link_to "Myリスト", "#", class: :mylist%>
      <%= link_to "投稿する", new_article_path, class: :new_post %>
    </div>
  <div>
</header>
<%= render "devise/shared/done_flash_message"%>

<div class="article">
  <%# ここから記事情報 %>
  <div class="article_info">
    <div class="upper_head">
      <div class="upper_head_left">
        <p class="title">
          <%= @article.title%>
        </p>
        <p class="nickname">
          by
        </p>
        <%= link_to @article.user.nickname, "#", class: :nickname_ho%>
      </div>
      <% if user_signed_in? && current_user.id == @article.user.id%>
        <div class="upper_head_right">
          <%= link_to "編集", edit_article_path(@article), class: :edit_button%>
          <%= link_to "削除", article_path(@article), method: :delete, class: :destroy_button, data: {confirm: "削除しますか？"} %>
        </div>
      <% end %>
    </div>
    <% if @article.image.attached?%>
      <div class="middle_head">
        <%= image_tag(@article.image, class: :image)%>
      </div>
    <% end %>
    <div class="lower_head">
      <p class="details">
        ○コーヒーの詳細
      </p>
      <%= @article.detail%>
    </div>
    <div class="upper_body">
      <p class="reciepe">○レシピの詳細</p>
      <div class="reciepe_box">
        <div class="how_brew">
          <p class="details">
            どうやって作ったか
          </p>
          <%= @article.how_brew%>
        </div>
        <div class="why_brew">
          <p class="details">
            なぜそうしたか
          </p>
          <%= @article.why_brew%>
        </div>
      </div>
    </div>
    <div class="middle_body">
      <p class="details">
          ○お味は？
      </p>
      <%= @article.taste%>
    </div>
    <div class="lower_body">
       <p class="details">
          ○こだわりポイント
      </p>
      <%= @article.commit%>
    </div>
    <div class="lower__body">
       <p class="details">
          ○タグ
      </p>
      <% @article.tags.each do |tag|%>
        <%= tag.name%>
      <% end %>
    </div>
    <div class="foot">
      <div id="likes_buttons_<%= @article.id %>">
        <%= render partial: "favorites/favorite", locals: {article: @article}%>
      </div>
    </div>
  </div>      
  <%# //ここまで、記事情報 %>
  <%# ここからコメント情報 %>
  <div class="comment_info">
    <p class="details">レビュー欄</p>
    <% if user_signed_in?%>
      <%= form_with class: :comment_input do |f|%>
        <%= f.label "#", "コメント"%>
        <%= f.text_field "#", class: :input_form%>
      <% end %>
    <% end %>
    <div class="comment_index">
    ここにはコメントが入ります
      <%# ！！！！！ここには、コメントの一覧が入ります！！！！！！ %>
    </div>
  </div>
  <%# //ここまでコメント情報 %>
</div>
