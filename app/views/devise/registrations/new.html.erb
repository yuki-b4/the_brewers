<%= render "devise/shared/global_header"%>
<div class="devise">
  <h2 class="devise_title">新規登録</h2>

  <%= form_with model: @user, url: user_registration_path, class: :devise_form, local: true do |f| %>

    <%= render "devise/shared/error_messages", model: @user %> 

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <p>ご職業</p>
      <%= f.collection_select(:job_id, Job.all, :id, :name, {}) %>
    </div>


    <div class="field">
      <p> パスワード </p>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder:"6文字以上の半角英数字"%>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "上記と同じパスワードを入力してください" %>
    </div>

    <div class="field">
      <%= f.label :nickname %><br />
      <%= f.text_area :nickname, maxlength: "40", placeholder: "例) コーヒーマン"%>
    </div>

    <div class="field">
      <p>1日のコーヒーの摂取量は？</p>
      <%= f.collection_select(:drink_coffee_id, DrinkCoffee.all, :id, :name, {}) %>
    </div>

    <div class="field">
      <%= f.label :favorite_shop %><br />
      <%= f.text_area :favorite_shop, placeholder: "例) 〇〇珈琲店, 〇〇coffee" %>
    </div>

    <div class="actions">
      <%= f.submit "登録する" %>
    </div>
  <% end %>
</div>

