<%= render "devise/shared/global_header"%>
<div class="devise">
  <h2 class="devise_title">新規登録</h2>

  <%= form_with model: @user, url: user_registration_path, class: :devise_form, local: true do |f| %>

    <%= render "devise/shared/error_messages", model: @user %> 

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="check_box box">
      <%= f.label :job_id, "ご職業" %><br />
      <%= f.collection_select(:job_id, Job.all, :id, :name, {}) %>
    </div>


    <div class="field">
      <%= f.label :password, "パスワード" %><br />
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder:"6文字以上の半角英数字"%>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "確認用パスワード" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "もう一度入力してください" %>
    </div>

    <div class="field">
      <%= f.label :nickname, "ニックネーム" %><br />
      <%= f.text_area :nickname, maxlength: "40", placeholder: "例) コーヒーマン"%>
    </div>

    <div class="check_box box extra_margin">
      <%= f.label :drink_coffee_id, "1日のコーヒー摂取量は？" %><br />
      <%= f.collection_select(:drink_coffee_id, DrinkCoffee.all, :id, :name, {}) %>
    </div>

    <div class="field">
      <%= f.label :favorite_shop, "お気に入りのお店"%><br />
      <%= f.text_area :favorite_shop, placeholder: "例) 〇〇珈琲店, 〇〇coffee" %>
    </div>

    <div class="actions">
      <%= f.submit "登録する" %>
    </div>
  <% end %>
  <strong ><%= link_to "トップページにもどる", root_path, class: "btn root_link"%></strong>
</div>