<% if user_signed_in? %>
  <% if article.liked_by?(current_user) %>
    <p><%= link_to "マネしたいリストから削除", article_favorites_path(article.id), method: :delete, remote: true, class: :delete_fav%></p>
  <% else %>
    <p><%= link_to "マネしたい！", article_favorites_path(article.id), method: :post, remote: true, class: :save_fav%></p>
  <% end %>
<% end %>
<p class="count_favorite"><%= article.favorites.count%><span>Fav</span></p>