<% if user_signed_in? %>
  <% if article.liked_by?(current_user) %>
    <p><span>お気に入り解除:</span><%= link_to article.favorites.count, article_favorites_path(article.id), method: :delete, remote: true%></p>
  <% else %>
    <p><span>お気に入り登録:</span><%= link_to article.favorites.count, article_favorites_path(article.id), method: :post, remote: true%></p>
  <% end %>
<% end %>
<p><span>お気に入り数:</span><%= link_to article.favorites.count%></p>